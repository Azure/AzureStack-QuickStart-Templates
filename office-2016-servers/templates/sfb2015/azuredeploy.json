{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namePrefix": {
            "type": "string",
            "minLength": 3,
            "maxLength": 8,
            "metadata": {
                "description": "Naming prefix for each new resource created. 3-char min, 8-char max, lowercase alphanumeric"
            }
        },
        "VMPrefix": {
            "type": "string",
            "minLength": 3,
            "maxLength": 8,
            "metadata": {
                "description": "Naming prefix for each VM created. 3-char min, 8-char max, lowercase alphanumeric"
            }
        },
        "storageAccountType": {
            "type": "string",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Type of new Storage Accounts (Standard_LRS, Standard_GRS, Standard_RAGRS or Premium_LRS) to be created to store VM disks"
            },
            "defaultValue": "Premium_LRS"
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the Skype for Business front-end VMs to be created"
            },
            "defaultValue": "Standard_DS5_v2"
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "DNS domain name for existing Active Directory domain"
            },
            "defaultValue": "contoso.com"
        },
        "domainNetbiosName": {
            "type": "string",
            "metadata": {
                "description": "Netbios name for existing Active Directory domain"
            },
            "defaultValue": "contoso"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Name of the Administrator of the existing Active Directory Domain"
            },
            "defaultValue": "lcladmin"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Administrator account of the existing Active Directory Domain"
            },
            "defaultValue": "egPitEvJeam7"
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "Name of the existing VNET."
            },
            "defaultValue": "ADVNETdeploy"
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the existing subnet in the existing VNET to which the S2D VMs should be deployed"
            },
            "defaultValue": "ADStaticSubnetdeploy"
        },
        "shareServerFQDN": {
            "type": "String",
            "metadata": {
                "description": "The share server FQDN"
            },
            "defaultValue": "fs01.contoso.com"
        },
        "shareName": {
            "type": "String",
            "metadata": {
                "description": "The share name"
            },
            "defaultValue": "data"
        },
        "workloadsLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of resources that the script is dependent on such as linked templates and DSC modules"
            },
            "defaultValue": "https://resources.blob.redmond.azurestack.corp.microsoft.com/resources"
        },
        "feLbIpAddress": {
            "type": "string",
            "metadata": {
                "description": "The ip address of load balancer for SfB front-end"
            },
            "defaultValue": "10.0.0.250"
        },
        "SqlServerFQDN": {
            "type": "string",
            "metadata": {
                "description": "The FQDN of one of the SQL servers in the cluster"
            },
            "defaultValue": "server-sql-0.contoso.com"
        },
        "SqlAG": {
            "type": "string",
            "metadata": {
                "description": "The name of the SQL always-on availability group"
            },
            "defaultValue": "alwayson-ag"
        },
        "CA": {
            "type": "string",
            "metadata": {
                "description": "The certificate authority path. Should be in the form of: 'srvdc-dc-1.contoso.com\\contoso-srvdc-dc-1-CA'"
            },
            "defaultValue": "srvdc-dc-1.contoso.com\\contoso-srvdc-dc-1-CA"
        },
        "DNSserver": {
            "type": "string",
            "metadata": {
                "description": "The IP or fqdn of the DNS server you want to update. Typically, this is one of your AD servers."
            },
            "defaultValue": "srvdc-dc-1.contoso.com"
        },
        "SfBISOName": {
            "type": "string",
            "metadata": {
                "description": "Skype for business ISO name"
            },
            "defaultValue": "SfB-E-9319.0-enUS.ISO"
        },
        "SfbCMUName": {
            "type": "string",
            "metadata": {
                "description": "Skype for business cumulative update installer name"
            },
            "defaultValue": "SkypeServerUpdateInstaller.exe"
        },
        "modRewriteName": {
            "type": "string",
            "metadata": {
                "description": "IIS mod rewrite installer name"
            },
            "defaultValue": "rewrite_amd64_en-US.msi"
        }

    },
    "variables": {
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "feStaticSubnetID": "[concat(variables('vnetID'),'/subnets/', parameters('subnetName'))]",
        "frontEndServerTemplateURL": "[concat(parameters('workloadsLocation'),'/deploy-sfb-fe-servers.json')]",
        "edgeServerTemplateURL": "[concat(parameters('workloadsLocation'),'/deployEdgeServers.json')]",
        "sfbIsoURL": "[concat(parameters('workloadsLocation'), '/', parameters('SfBISOName'))]",
        "sfbCMUURL": "[concat(parameters('workloadsLocation'), '/', parameters('SfbCMUName'))]",
        "modRewriteURL": "[concat(parameters('workloadsLocation'), '/', parameters('modRewriteName'))]",
        "sfbPrereqModulesURL": "[concat(parameters('workloadsLocation'), '/SfBWorkload.zip')]",
        "sfbFe01": "[concat(parameters('VMPrefix'), '-fe-01')]",
        "sfbFe02": "[concat(parameters('VMPrefix'), '-fe-02')]",
        "sfbFe03": "[concat(parameters('VMPrefix'), '-fe-03')]",
        "sfbEdge01": "[concat(parameters('VMPrefix'), '-edge-01')]",
        "sfbEdge02": "[concat(parameters('VMPrefix'), '-edge-02')]",
        "deploySfBTopology": "deploySfBTopology.ps1\\Deploy_SkypeForBusinessTopology",
        "deployFrontEndComponents": "deployFrontEndComponents.ps1\\Deploy_SkypeForBusinessFrontEndComponents",
        "installScriptURL": "[concat(parameters('workloadsLocation'),'/installSkypeForBusiness.ps1')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[concat(parameters('namePrefix'), 'deploySfBFEServers')]",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('frontEndServerTemplateURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "installScriptURL": {
                        "value": "[variables('installScriptURL')]"
                    },
                    "workloadsLocation": {
                        "value": "[parameters('workloadsLocation')]"
                    },
                    "shareServerFQDN": {
                        "value": "[parameters('shareServerFQDN')]"
                    },
                    "shareName": {
                        "value": "[parameters('shareName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "storageAccountType": {
                        "value": "[parameters('storageAccountType')]"
                    },
                    "feStaticSubnetID": {
                        "value": "[variables('feStaticSubnetID')]"
                    },
                    "namePrefix": {
                        "value": "[parameters('namePrefix')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "feNodes": {
                        "value": [
                            "[variables('sfbFe01')]",
                            "[variables('sfbFe02')]",
                            "[variables('sfbFe03')]"
                        ]
                    },
                    "sfbIsoURL": {
                        "value": "[variables('sfbIsoURL')]"
                    },
                    "sfbPrereqModulesURL": {
                        "value": "[variables('sfbPrereqModulesURL')]"
                    },
                    "sfbCMUURL": {
                        "value": "[variables('sfbCMUURL')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "feLbIpAddress": {
                        "value": "[parameters('feLbIpAddress')]"
                    },
                    "SqlServerFQDN": {
                        "value": "[parameters('SqlServerFQDN')]"
                    },
                    "SqlAG": {
                        "value": "[parameters('SqlAG')]"
                    },
                    "DNSserver": {
                        "value": "[parameters('DNSserver')]"
                    },
                    "CA": {
                        "value": "[parameters('CA')]"
                    },
                    "modRewriteURL": {
                        "value": "[variables('modRewriteURL')]"
                    }
                }
            },
            "dependsOn": []
        }
    ]
}